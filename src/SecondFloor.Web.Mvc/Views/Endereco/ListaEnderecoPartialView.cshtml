@using SecondFloor.I18n
@model IEnumerable<SecondFloor.Web.Mvc.Models.EnderecoViewModels>
<h4>@ViewBag.Title</h4>
<p>
    <button type="button" onclick="ajaxModalFormOpenHandler(this)" class="btn btn-sm btn-default"
            data-url="/Endereco/Create/@ViewBag.AnuncianteId"
            data-url-content-update="/Endereco/List/@ViewBag.AnuncianteId"
            data-content-update-id="#conteudoAnuncianteEndereco">
        @Resources.View_Endereco_ListaEnderecoPartialView_Botao_NovoEndereco
    </button>
    <button type="button" onclick="ajaxUpdateContent(this)" class="btn btn-sm btn-default"
            data-url-content-update="/Endereco/List/@ViewBag.AnuncianteId"
            data-content-update-id="#conteudoAnuncianteEndereco">
        <i class="glyphicon glyphicon-refresh"></i>
    </button>
</p>
<table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Logradouro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Complemento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bairro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cep)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Logradouro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Complemento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bairro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cep)
                </td>
                <td class="text-center">
                    <button type="button" onclick="ajaxModalFormOpenHandler(this)" class="btn btn-xs btn-warning"
                            data-url="/Endereco/Edit/@Html.DisplayFor(id=> item.Id)"
                            data-url-content-update="/Endereco/List/@Html.DisplayFor(id => item.AnuncianteId)"
                            data-content-update-id="#conteudoAnuncianteEndereco">
                        <i class="glyphicon glyphicon-pencil"></i>
                    </button>
                    <button type="button" onclick="ajaxModalFormOpenHandler(this)" class="btn btn-xs btn-danger"
                            data-url="/Endereco/Delete/@Html.DisplayFor(id=> item.Id)"
                            data-url-content-update="/Endereco/List/@Html.DisplayFor(id => item.AnuncianteId)"
                            data-content-update-id="#conteudoAnuncianteEndereco">
                        <i class="glyphicon glyphicon-trash"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
