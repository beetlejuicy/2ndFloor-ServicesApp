@model SecondFloor.Web.Mvc.Models.EnderecoViewModels

<div class="modal-dialog">
    <div class="modal-content">

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 id="myModalLabel" class="modal-title">&nbsp;@ViewBag.Title</h4>
        </div>
        @if (!string.IsNullOrEmpty(ViewBag.MessageType))
        {
            <div class="alert @ViewBag.MessageType fade in">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <small>@Html.Raw(ViewBag.Message)</small>
            </div>
        }

        <div id="myModalBody" class="modal-body">
            <div id="conteudo-modal">

                @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "post", InsertionMode = InsertionMode.Replace, UpdateTargetId = "myModal" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            
                            @Html.LabelFor(model => model.Logradouro, htmlAttributes: new {@class = "control-label col-md-3"})
                            @if (!ViewBag.Excluir)
                            {
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.Logradouro, new {htmlAttributes = new {@class = "form-control"}})
                                    @Html.ValidationMessageFor(model => model.Logradouro, "", new {@class = "text-danger"})
                                </div>
                            }
                            else
                            {
                                <div class="col-md-6">
                                    @Html.DisplayFor(model => model.Logradouro)
                                </div>
                            }
                        </div>
                        

                        <div class="form-group">
                            @Html.LabelFor(model => model.Numero, htmlAttributes: new { @class = "control-label col-md-3" })
                            @if (!ViewBag.Excluir)
                            {
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.Numero, new {htmlAttributes = new {@class = "form-control"}})
                                    @Html.ValidationMessageFor(model => model.Numero, "", new {@class = "text-danger"})
                                </div>
                            }
                            else
                            {
                                <div class="col-md-6">
                                    @Html.DisplayFor(model=>model.Numero)
                                </div>
                            }
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Complemento, htmlAttributes: new { @class = "control-label col-md-3" })
                            @if (!ViewBag.Excluir)
                            {
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.Complemento, new {htmlAttributes = new {@class = "form-control"}})
                                    @Html.ValidationMessageFor(model => model.Complemento, "", new {@class = "text-danger"})
                                </div>
                            }
                            else
                            {
                                <div class="col-md-6">
                                    @Html.DisplayFor(model=>model.Complemento)
                                </div>
                            }
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Bairro, htmlAttributes: new { @class = "control-label col-md-3" })
                            @if (!ViewBag.Excluir)
                            {
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.Bairro, new {htmlAttributes = new {@class = "form-control"}})
                                    @Html.ValidationMessageFor(model => model.Bairro, "", new {@class = "text-danger"})
                                </div>
                            }
                            else
                            {
                                <div class="col-md-6">
                                    @Html.DisplayFor(model=>model.Bairro)
                                </div>
                            }
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Cidade, htmlAttributes: new { @class = "control-label col-md-3" })
                            @if (!ViewBag.Excluir)
                            {
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.Cidade, new {htmlAttributes = new {@class = "form-control"}})
                                    @Html.ValidationMessageFor(model => model.Cidade, "", new {@class = "text-danger"})
                                </div>
                            }
                            else
                            {
                                <div class="col-md-6">
                                    @Html.DisplayFor(model => model.Cidade)
                                </div>
                            }
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label col-md-3" })
                            @if (!ViewBag.Excluir)
                            {
                                <div class="col-md-6">
                                    @Html.DropDownListFor(model => model.Estado, Model.GetEstadosSelectList(), htmlAttributes : new { @class = "form-control selectpicker"  })
                                    @Html.ValidationMessageFor(model => model.Estado, "", new {@class = "text-danger"})
                                </div>
                            }
                            else
                            {
                                <div class="col-md-6">
                                    @Html.DisplayFor(model => model.Estado)
                                </div>
                            }
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Cep, htmlAttributes: new { @class = "control-label col-md-3" })
                            @if (!ViewBag.Excluir)
                            {
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.Cep, new {htmlAttributes = new {@class = "form-control"}})
                                    @Html.ValidationMessageFor(model => model.Cep, "", new {@class = "text-danger"})
                                </div>
                            }
                            else
                            {
                                <div class="col-md-6">
                                    @Html.DisplayFor(model => model.Cep)
                                </div>
                            }
                        </div>
                        
                        @Html.HiddenFor(model => model.AnuncianteId)
                        <!--<div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </div>-->
                    </div>
                }

            </div>
        </div>
        <div class="modal-footer form-horizontal">
            <button type="button" class="btn btn-default btn-sm" data-dismiss="modal" aria-hidden="true">Cancelar</button>
            <a id="criarEndereco" onclick="ajaxFormSubmit(this)" href="#" role="button" class="btn btn-sm btn-danger">Salvar</a>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->