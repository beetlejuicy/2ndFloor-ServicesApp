@model IEnumerable<SecondFloor.Web.Mvc.Models.AnuncianteViewModels>

<br/>
<p>
    <button type="button" onclick="ajaxModalFormOpenHandler(this)" class="btn btn-sm btn-success"
            data-url="/Anunciante/Create/"
            data-url-content-update="/Anunciante/List"
            data-content-update-id="#conteudoAnunciante">
        <i class="glyphicon glyphicon-plus"></i>
    </button>
</p>
<table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeResponsavel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RazaoSocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cnpj)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeResponsavel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RazaoSocial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cnpj)
                </td>
                <td>
                    <a href="/Anunciante/Detalhes/@Html.DisplayFor(id=> item.Id)" class="btn btn-sm btn-info">
                        <i class="glyphicon glyphicon-eye-open"></i>
                    </a>
                    <button type="button" onclick="ajaxModalFormOpenHandler(this)" class="btn btn-sm btn-warning"
                            data-url="/Anunciante/Edit/@Html.DisplayFor(id=> item.Id)"
                            data-url-content-update="/Anunciante/List"
                            data-content-update-id="#conteudoAnunciante">
                        <i class="glyphicon glyphicon-pencil"></i>
                    </button>
                    <!--<button type="button" onclick="ajaxModalFormOpenHandler(this)" class="btn btn-sm btn-danger"
                            data-url="/Anunciante/Delete/@Html.DisplayFor(id=> item.Id)"
                            data-url-content-update="/Anunciante/List"
                            data-content-update-id="#conteudoAnunciante">
                        <i class="glyphicon glyphicon-trash"></i>
                    </button>-->
                </td>
            </tr>
        }
    </tbody>
</table>
